<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:id="@+id/txt_room_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created by "
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/txt_username"
        android:layout_alignLeft="@+id/txt_room_name"
        android:layout_alignStart="@+id/txt_room_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        android:id="@+id/txt_username"
        android:layout_below="@+id/txt_room_name"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeAgo"
        android:layout_marginLeft="4dp"
        android:layout_alignTop="@+id/txt_username"
        android:layout_toRightOf="@+id/txt_username"
        android:layout_toEndOf="@+id/txt_username" />

</RelativeLayout>